		TARGET_DIR = "/var/jenkins_home/workspace/gitlab-pipeline"
	}
	
	options {
		skipDefaultCheckout(true)
	}
 
	stages {
		stage('SAST'){
            steps{
				echo '[*] Running truffleHog'
                sh "trufflehog --regex --json --max_depth 1 --rules ${TARGET_DIR}/rules.json https://github.com/Kevino135/test > ${TARGET_DIR}/tfhog.result"
