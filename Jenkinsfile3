		stage('TruffleHog'){
/*			when{
				expression { env.PROCEED == "yes"}
			}
*/
            steps{
				script{
					try{
						echo "[*] Running truffleHog ..."
						sh "trufflehog --regex --json --max_depth 1 --rules ${TARGET_DIR}/rules.json ${TARGET_REPO} > ${TARGET_DIR}/tfhog.json"
					}
					catch(err) {
						
					}
				}
				script{
					FILENAME = sh (
						script: "date +'%Y-%m-%d_%T'",
						returnStdout: true
					)

					TFHOG_RESULT = sh (
						script: "jq . ${TARGET_DIR}/tfhog.json",
						returnStdout: true
					)
				}
				echo "${TFHOG_RESULT}"
				echo "${FILENAME}"

				echo "[*] Removing [tfhog.result] file ..."
				sh "rm ${TARGET_DIR}/tfhog.json"
            }
        }
	}
}
